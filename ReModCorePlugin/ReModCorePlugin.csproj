        <ImplicitUsings>enable</ImplicitUsings>
		<LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
		<VRChatPath>C:\Program Files (x86)\Steam\steamapps\common\VRChat</VRChatPath>
    </PropertyGroup>

    <ItemGroup>
